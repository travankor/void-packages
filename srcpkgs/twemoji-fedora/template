# Template file for 'twemoji-fedora'
pkgname=twemoji-fedora
version=13.0.1
revision=1
_fedrel=1.fc33
archs=noarch
wrksrc=usr
hostmakedepends="rpmextract"
depends="font-util"
short_desc="Twemoji rendered in CBLC"
maintainer="travankor <travankor@tuta.io>"
license="CC-BY-SA-4.0, MIT"
homepage="https://fedoraproject.org/wiki/Twitter_Twemoji_fonts"
distfiles="https://kojipkgs.fedoraproject.org//packages/twitter-twemoji-fonts/${version}/${_fedrel}/noarch/twitter-twemoji-fonts-${version}-${_fedrel}.noarch.rpm"
checksum=4ed2255a287fa7a250da13da160568d68c8bbd65a88b5599c3262768b7e2b77d
font_dirs="/usr/share/fonts/twemoji"

do_install() {
	vlicense share/licenses/twitter-twemoji-fonts/LICENSE
	vmkdir etc/fonts/conf.d/
	install -Dm644 share/fonts/twemoji/Twemoji.ttf ${DESTDIR}/usr/share/fonts/twemoji/Twemoji.ttf
}
